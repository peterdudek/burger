<div class="page-container">

  <div class="content-wrap">

    <div class="container" id="flame">
      <img id="burg" alt="burger logo" src="/assets/img/burgerlogo.png">
      <h1>Burgersoft</h1>
    </div>

    <div id="divyyy" class="container">

      <div class="row" id="mainrow">
        <div class="col-2"> </div>
        <div class="col-4">
          <ol>
            {{#each burgers}}
              {{#unless devoured}}
              <li>
                <p>{{this.burger_name}}<button data-id={{this.id}} type="button" class="btn btn-danger devoured">Devour it!</button></p>
              </li>
              {{/unless}}
            {{/each}}
          </ol>
        </div>

        <div class="col-4">
          <ol>
            {{#each burgers}}
              {{#if devoured}}
              <li>
                <p>{{this.burger_name}}</p>
              </li>
              {{/if}}
            {{/each}}
          </ol>
        </div>
        <div class="col-2"> </div>
      </div>

      <hr>

      <div class="row" id="burgDiv">
        <div class="texty">
          <h4>Add a Burger</h4>
        </div>

      </div>

      <div class="row" id="burgDiv2">
        <form class="create-form">
          <div class="form-group">
            <input type="text" id="burger_name" name="burger">
          </div>
          <div>
            <button type="button submit" class="btn btn-primary" id="submitBtn">Submit</button>
          </div>
        </form>
      </div>

    </div>

  </div>
    <footer class="sticky-footer">Burgersoft Copyright Piotr Dudek Â© 2020</footer>
</div>